<?xml version="1.0"?>
<robot name="single" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<xacro:arg name="PREFIX" default="-"/>
	
	<xacro:property name="prefix" value="$(arg PREFIX)h" />
	<xacro:property name="prefix_" value="${'' if prefix=='' else prefix+'_'}"/>

	<link name="world"/>
    	<joint name="${prefix_}base_joint" type="fixed">
      		<parent link="world" />
      		<child link="${prefix_}forearm"/>
      	<origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>
</robot>
